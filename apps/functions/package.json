        "@genkit-ai/dotprompt": "^0.5.10",
        "@genkit-ai/firebase": "^0.5.10",
        "@genkit-ai/flow": "^0.5.10",
        "@genkit-ai/googleai": "^0.5.10",
        "firebase-admin": "^13.0.0",
        "firebase-functions": "^6.3.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "firebase-functions-test": "^3.1.0",
        "typescript": "^5.3.3"
    },
    "private": true
}