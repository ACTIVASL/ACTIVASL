rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // PROD RULES: Stricter validation
    match /patients/{patientId}/{fileName} {
      allow read: if request.auth != null; // Team Access
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*|application/pdf'); // Images/PDFs only
    }

    match /tenants/{tenantId}/files/{fileId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null
                    && request.resource.size < 100 * 1024 * 1024;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
