{
  "name": "monorepo-activa-digital",
  "version": "1.0.0",
  "description": "Enterprise AI Operating System & Digital Transformation Engine",
  "repository": {
    "type": "git",
    "url": "https://github.com/ACTIVASL/ACTIVA-SL.git"
  },
  "author": "ACTIVA S.L.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "node scripts/verify_deploy.js && turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "generate:assets": "node scripts/generate-assets.js",
    "dev": "turbo run dev",
    "web": "pnpm --filter landing-web dev",
    "crm": "pnpm --filter crm-client dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "backup": "tsx scripts/backup-firestore.ts",
    "restore": "tsx scripts/restore-firestore.ts",
    "install:functions": "npm --prefix apps/functions install",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "date-fns": "^4.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "firebase-admin": "^11.11.1",
    "firebase-tools": "^15.3.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "latest",
    "sharp": "^0.34.5",
    "ts-jest": "^29.4.6",
    "tsx": "^4.6.2",
    "turbo": "latest",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@tanstack/react-query-persist-client": "^5.90.20",
    "idb-keyval": "^6.2.2"
  },
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "@tanstack/react-query": "5.90.20",
      "react-router-dom": "7.11.0",
      "firebase": "10.14.1",
      "date-fns": "4.1.0",
      "firebase-admin": "^12.0.0"
    }
  }
}